<h1>Episode: <%= @episode.date %></h1>
<h2>Average Rating: <%= (@episode.appearances.map {|app| app.rating }.sum / @episode.appearances.count).to_f %></h2><br>
<h2>Guests: </h2>
<ul>
  <%= @episode.guests.each do |guest| %>
    <li><%= link_to guest.name, guest_path(guest) %></li><br>
  <% end %>
</ul>
